<Window x:Class="UsingBackgroundWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Button Click="StartProcesing">Start</Button>
        <ProgressBar x:Name="AsyncProgressBar" Minimum="0" Maximum="100" Width="200" Height="50"/>
        <TextBlock x:Name="ResultLabel" Text="Waiting for Result"/>
        <Button Click="CancelProcessing">Cancel</Button>
    </StackPanel>
</Window>
